#-------------Build stage-------------
FROM node:22-alpine As build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .
 
RUN npm run build


# ---------- Runtime stage ----------
FROM nginx:alpine

WORKDIR /app

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]


